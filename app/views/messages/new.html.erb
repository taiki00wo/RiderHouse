<div class="post-bg">
  <div class="bg-mask">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">

          <%= form_with model: @message, url: user_messages_path(@user), method: :post, local: true do |f| %>

            <div class="form-group">
              <%= f.label :content, "メッセージ" %>
              <%= f.text_area :content, class: 'form-control' %>
            </div>
            
            <%= f.submit "送信する", class: 'btn btn-primary' %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
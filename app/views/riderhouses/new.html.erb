<div class='riderhouse-bg'>
  <div class='bg-mask'>
    <h3>ライダーハウス新規登録</h3>
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
    
          <div class="image-box"%></div>

          <table class="table">
            <tbody>

              <%= form_with model: @riderhouse, local: true do |f| %>
                <tr>
                  <td><%= f.label "画像をアップロード" %></td>
                  <td><%= f.file_field :image %></td>
                </tr>

                <tr>
                  <td><%= f.label :name, "名称" %></td>
                  <td><%= f.text_field :name, class: 'form-control' %></td>
                </tr>

                <tr>
                  <td><%= f.label :address, "住所" %></td>
                  <td><%= f.text_field :address, class: 'form-control' %></td>
                </tr>

                <tr>
                  <td><%= f.label :tel, "電話番号" %></td>
                  <td><%= f.text_field :tel, class: 'form-control' %></td>
                </tr>

                <tr>
                  <td><%= f.label :price, "価格" %></td>
                  <td><%= f.text_field :price, class: 'form-control' %></td>
                </tr>

                <tr>
                  <td><%= f.label :opening_hours, "営業時間" %></td>
                  <td><%= f.text_field :opening_hours, class: 'form-control' %></td>
                </tr>

                <tr>
                  <td><%= f.submit "登録する", class: 'btn btn-primary' %></td>
                  <td></td>
                <tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
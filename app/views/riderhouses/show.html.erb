<div class='riderhouse-bg'>
  <div class='bg-mask'>
    <div class="container">
      <div class="row">
        <div class="col-lg-6">

          <% if @riderhouse.image? %>
            <%= image_tag @riderhouse.image.url, :size =>'500x375' %>
          <% else %>
            <%= image_tag '/images/riderhouse_default.png', :size =>'500x375' %>
          <% end %> 

          <div class="table-responsive">
            <table class="table bg-white">
              <tbody>
                <tr>
                  <th>名称</th>
                  <th><%= @riderhouse.name %></th>
                </tr>
                <tr>
                  <th>住所</th>
                  <th><%= @riderhouse.address %></th>
                <tr>
                <tr>
                  <th>緯度</th>
                  <th><%= @riderhouse.latitude %></th>
                <tr>
                <tr>
                  <th>経度</th>
                  <th><%= @riderhouse.longitude %></th>
                <tr>
                <tr>
                  <th>電話番号</th>
                  <th><%= @riderhouse.tel %></th>
                </tr>
                <tr>
                  <th>価格</th>
                  <th><%= @riderhouse.price %></th>
                </tr>
                <tr>
                  <th>営業時間</th>
                  <th><%= @riderhouse.opening_hours %></th>
                </tr>
                <tr>
                  <% if @riderhouse.user_id == current_user.id %>
                    <th>
                      <%= link_to '編集', edit_riderhouse_path(@riderhouse), class: 'btn btn-primary' %>
                      <%= link_to '削除', riderhouse_path(@riderhouse), method: :delete, data: { confirm: "#{@riderhouse.name}を削除してよろしいですか？" }, class: 'btn btn-danger' %>
                    </th>
                  <% end %>
                </tr>
              </tbody>
            </table>
          </div>

        </div>

        <div class="col-lg-6">
          <div class="overflow-auto" style="height:680px;">
            <%= "口コミ#{@riderhouse.posts.count}件" %><br>
            <%= Post.new.rating_average(@riderhouse) %>
            <%# 口コミを表示 %>
            <% @posts.each do |post| %>
              <table class="table bg-white">
                <tbody>
                  <tr>
                    <% if post.user.image? %>
                      <th><%= link_to image_tag(post.user.image.url, :size =>'50x50'), user_path(post.user), class: 'rounded-circle' %></th>
                    <% else %>
                      <th><%= link_to image_tag('/images/user_default.jpeg', :size =>'50x50'), user_path(post.user), class: 'rounded-circle' %></th>
                    <% end %>
                    <th>名前：<%= post.user.name %></th>
                
                  </tr>
                  <tr>
                    <th>評価</th>
                    <th><%= post.rating %></th>
                  </tr>
                  <tr>
                    <th>口コミ</th>
                    <th><%= post.content %><th>
                  <tr>
                </tbody>
              </table>
            <% end %>
          </div> 
          <%= link_to '口コミを投稿する', new_riderhouse_post_path(@riderhouse), class: 'btn btn-primary' %> 
        </div>
      </div>
    </div>
  </div>
</div>


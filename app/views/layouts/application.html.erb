<!DOCTYPE html>
<html>
  <head>
    <title>RiderHouse</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= include_gon(watch: true) %>
    <%= stylesheet_pack_tag 'application', media: "all" %>
    <%# ajaxにjquryが反映されなかったため読み込み %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <%= javascript_pack_tag 'application' %>
    <link href="https://use.fontawesome.com/releases/v5.11.2/css/all.css" rel="stylesheet">

  </head>

  <body>
    <div class='no-display'>
      <%= image_tag('/images/riderhouse_bg_img.jpg') %>
      <%= image_tag('/images/user_bg_img.jpg') %>
      <%= image_tag('/images/post_bg_img.jpg') %>
      <%= image_tag('/images/favorite_bg_img.jpg') %>
    </div>
    <%= render 'layouts/header' %>
    <main>
    <% if flash[:notice] %>
      <div class="alert alert-success"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-success"><%= flash[:alert] %></div>
    <% end %>
      <%= yield %>
    </main>
  </body>
</html>
